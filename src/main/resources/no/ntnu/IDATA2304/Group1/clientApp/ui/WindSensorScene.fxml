<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<?import jfxtras.scene.control.gauge.linear.SimpleMetroArcGauge?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="no.ntnu.IDATA2304.Group1.clientApp.ui.WindSensorSceneController">
   <top>
      <Label alignment="CENTER" text="Wind sensor" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font size="29.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <FlowPane alignment="CENTER" hgap="23.0" vgap="23.0" BorderPane.alignment="CENTER">
         <children>
            <SimpleMetroArcGauge fx:id="windSpeedDial" onMouseClicked="#mouseClickHandler" />
            <GridPane hgap="12.0" vgap="12.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label alignment="CENTER_RIGHT" text="Speed (ms):" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <TextField fx:id="windSpeedText" GridPane.columnIndex="1" />
                  <Label text="Direction:" GridPane.rowIndex="1" />
                  <TextField fx:id="windDirectionText" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
               <FlowPane.margin>
                  <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
               </FlowPane.margin>
            </GridPane>
         </children>
      </FlowPane>
   </center>
</BorderPane>
